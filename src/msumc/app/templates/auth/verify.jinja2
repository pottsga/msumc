{% extends '../base.jinja2' %}

{% block content %}

  <h1>Register</h1>
  <p>Please set your password.</p>

  {% set minlength = 8 %}
  {% set maxlength = 24 %}

  <form action="{{request.route_url('auth.verify', verification_id=email_verification.verification_id)}}" method="POST">
    <div class="form-group">
      <label for="email">Password</label>
      <input type="password" id="password" name="password" class="form-control" minlength="{{minlength}}" maxlength="{{maxlength}}" required>
      <small class="form-text text-muted">Must be between {{minlength}} and {{maxlength}} characters.</small>
    </div>
    <div class="form-group">
      <label for="email">Verify Password</label>
      <input type="password" id="password2" name="password2" class="form-control" minlength="{{minlength}}" maxlength="{{maxlength}}" required>
      <small class="form-text text-muted">Must be between {{minlength}} and {{maxlength}} characters.</small>
    </div>
    <div class="form-group text-right">
      <button type="submit" class="btn btn-primary">Set Password</button>
    </div>
  </form>

{% endblock content %}

{% block scripts %}
  <script src="{{request.static_url('msumc:app/static/js/auth/verify.js')}}"></script>
{% endblock scripts %}
