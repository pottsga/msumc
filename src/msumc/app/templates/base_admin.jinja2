<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title or 'MSUMC'}}</title>

  <!-- Favicon -->
  <link href="{{request.static_url('msumc:app/static/img/favicon.png')}}" rel="shortcut icon">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans|Oswald&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="{{request.static_url('msumc:app/static/vendor/bootstrap4/css/bootstrap.min.css')}}">
  <link rel="stylesheet" href="{{request.static_url('msumc:app/static/vendor/jquery-ui/jquery-ui.min.css')}}">
  <link rel="stylesheet" href="{{request.static_url('msumc:app/static/css/main.css')}}">
  <link rel="stylesheet" href="{{request.static_url('msumc:app/static/vendor/datatable/datatables.min.css')}}">
</head>
<body>

  {% set admin = true %}
  {% include './includes/navbar.jinja2' %}

  <div class="container my-3">
    <div class="row">
      <div class="col-lg-2">
        {% include './includes/sidebar.jinja2' %} 
      </div>
      <div class="col-lg-10">
        {% include './includes/messages.jinja2' %}
        <main>
          {% block content %}{% endblock content %}
        </main>
      </div>
    </div>
  </div>

  <script src="{{request.static_url('msumc:app/static/vendor/jquery/jquery-3.2.1.min.js')}}"></script>
  <script src="{{request.static_url('msumc:app/static/vendor/jquery-ui/jquery-ui.min.js')}}"></script>
  <script src="{{request.static_url('msumc:app/static/vendor/datatable/datatables.js')}}"></script>
  <script src="{{request.static_url('msumc:app/static/vendor/popper/popper.min.js')}}"></script>
  <script src="{{request.static_url('msumc:app/static/vendor/bootstrap4/js/bootstrap.min.js')}}"></script>
  <script src="{{request.static_url('msumc:app/static/js/main.js')}}"></script>

  {% block scripts %}{% endblock scripts %}
</body>
</html>
