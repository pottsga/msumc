{% extends '../base_admin.jinja2' %}

{% block content %}
  <h1>Person - Add</h1>

  <form action="{{request.route_url('person.add')}}" method="POST">
    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <div class="custom-control custom-switch">
            <input type="checkbox" id="is_child" name="is_child" class="custom-control-input">
            <label class="custom-control-label" for="is_child">Is Child?</label>
          </div>
        </div>
      </div>
      <div class="col-lg-6"></div>
      <div class="col-lg-6">
        <div class="form-group">
          <label for="family_id">Family</label>
          <select id="family_id" name="family_id" class="form-control" required>
            <option value=""></option>
            {% for family in families %}
              <option value="{{family.id}}"
                {% if family.id == family_id|int %}selected{% endif %}>
                {{family.last_name}}
              </option>
            {% endfor %}
          </select>
        </div>
      </div>
      <div class="col-lg-6"></div>
      <div class="col-lg-6">
        <div class="form-group">
          <label for="first_name">First Name</label>
          <input type="text" id="first_name" name="first_name" class="form-control" required>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <label for="last_name">Last Name</label>
          <input type="text" id="last_name" name="last_name" class="form-control" value="{{family.last_name}}" required>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <label for="last_name">Gender</label>
          <select id="gender" name="gender" class="form-control" required>
            <option value=""></option>
            <option value="M">Male</option>
            <option value="F">Female</option>
          </select>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <label for="birthday">Birthday</label>
          <input type="text" id="birthday" name="birthday" class="form-control datepicker" pattern="\d{2}/\d{2}/\d{4}">
          <small class="form-text text-muted">Must be of format 00/00/0000</small>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <label for="phone_number">Phone Number</label>
          <input type="tel" id="phone_number" name="phone_number" class="form-control" pattern="\(\d{3}\)\s{1}\d{3}-\d{4}">
          <small class="form-text text-muted">Must be of format (000) 000-0000.</small>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control">
        </div>
      </div>
      <div class="col-12">
        <div class="form-group">
          <label for="notes">Notes</label>
          <textarea id="notes" name="notes" rows="5" class="form-control"></textarea>
        </div>
      </div>
      <div class="col-12 text-right">
        <button type="submit" class="btn btn-primary">Add</button>
      </div>
    </div>
  </form>
{% endblock content %}
